<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="raisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="android:topLeftRadius">15dp</item>
        <item name="android:bottomLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:bottomRightRadius">15dp</item>

    </style>

    <style name="editTextLogin" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

</resources>
